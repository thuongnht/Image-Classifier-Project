{
  "swagger": "2.0",
  "info": {
    "title": "Prediction APIs",
    "version": "1.0.0"
  },
  "host": "127.0.0.1:5555",
  "schemes": ["http", "https"],
  "consumes": ["application/json", "multipart/form-data"],
  "produces": ["application/json", "text/plain", "text/html", "multipart/form-data"],
  "paths": {
    "/": {
      "get": {
        "description": "Returns message showing app is up",
        "produces": [
          "text/plain"
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/api/v1/health-check": {
      "get": {
        "description": "Returns message showing app is up",
        "produces": [
          "text/plain"
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/api/v1/predict": {
      "post": {
        "description": "Predict an image",
        "consumes": ["multipart/form-data"],
        "produces": ["multipart/form-data"],
        "parameters": [
          {
            "in": "header",
            "name": "X-Request-ID",
            "schema": {
              "type": "string"
            },
            "required": true
          },
          {
            "in": "formData",
            "name": "model",
            "default": "1",
            "description": "1: vgg16, 2: vgg19, 3: resnet152",
            "type": "integer",
            "minimum": 1,
            "maximum": 3,
            "required": false
          },
          {
            "in": "formData",
            "name": "topk",
            "default": "5",
            "description": "Top K best matched",
            "type": "integer",
            "minimum": 1,
            "maximum": 50,
            "required": false
          },
          {
            "in": "formData",
            "name": "file",
            "type": "file",
            "format": "binary",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Result which category image belongs to",
            "schema": {
              "$ref": "#/definitions/Prediction_Response"
            }
          },
          "500": {
            "description": "Invalid request data!"
          }
        }
      }
    }
  },
  "definitions": {
    "Prediction_Response": {
      "type": "object",
      "properties": {
        "top_categories": {
          "type": "object"
        },
        "figure": {
          "type": "string",
          "format": "binary"
        }
      }
    }
  }
}
